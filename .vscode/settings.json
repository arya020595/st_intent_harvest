{
  // =======================================================
  // TEAM-WIDE SETTINGS - Committed to Git
  // These settings will apply to all team members
  // =======================================================

  // RuboCop auto-formatting on save
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rubocop.vscode-rubocop",
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.rubocop": "explicit"
    }
  },

  // RuboCop extension settings
  "rubocop.enable": true,
  "rubocop.onSave": true,
  "rubocop.autocorrect": true,
  "rubocop.autocorrectOnSave": true,
  "rubocop.useServer": true,
  "rubocop.mode": "enableUnconditionally",
  "rubocop.safeAutocorrect": false,

  // Additional Ruby settings
  "ruby.lint": {
    "rubocop": true
  },
  "ruby.format": "rubocop",

  // Editor settings for consistency across team
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // Git settings
  "files.eol": "\n"
}
