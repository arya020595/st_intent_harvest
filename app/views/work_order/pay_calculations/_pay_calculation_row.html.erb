<tr>
  <td class="text-center"><%= pay_calculation.id %></td>
  <td><%= (Date.strptime(pay_calculation.month_year, '%Y-%m').strftime('%B %Y')) %></td>
  <td class="text-end"><%= number_to_currency(pay_calculation.total_net_salary || 0, unit: 'RM ', separator: '.', delimiter: ',', precision: 2) %></td>
  <td class="text-center"><%= pay_calculation.updated_at&.strftime('%d-%m-%Y') || '-' %></td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to work_order_pay_calculation_path(pay_calculation), class: "btn btn-info btn-sm", title: "View Details" do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <%= link_to edit_work_order_pay_calculation_path(pay_calculation), class: "btn btn-warning btn-sm", title: "Edit" do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to work_order_pay_calculation_path(pay_calculation), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this pay calculation?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
