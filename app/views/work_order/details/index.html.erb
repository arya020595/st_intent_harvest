<div class="container-fluid px-4 py-4 work-order-details" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Work Orders</h5>
      <%= link_to new_work_order_detail_path, class: "btn btn-light btn-sm", data: { turbo_frame: "_top" } do %>
        <i class="bi bi-plus-circle"></i> Add Work Order
      <% end %>
    </div>
    <div class="card-body">
      <%= turbo_pagy_frame do %>
        <%= search_form_for @q, url: work_order_details_path, html: { id: 'work-order-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-success">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :work_order_rate_work_order_name, 'Work Order') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :block_block_number, 'Block No.') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :start_date, 'Starting Date') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :work_order_status, 'Status') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'Search Work Order...', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :work_order_rate_work_order_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Work Order...' %>
                  </th>
                  <th>
                    <%= f.search_field :block_block_number_cont, class: 'form-control form-control-sm', placeholder: 'Search Block...' %>
                  </th>
                  <th class="text-center">
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y"
                           data-flatpickr-field-name-value="q[start_date]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :start_date_gteq, value: params.dig(:q, :start_date_gteq) %>
                    <%= f.hidden_field :start_date_lteq, value: params.dig(:q, :start_date_lteq) %>
                  </th>
                  <th class="text-center">
                    <%= f.select :work_order_status_eq,
                      options_for_select([['Ongoing', 'ongoing'], ['Pending', 'pending'], ['Amendment Required', 'amendment_required'], ['Completed', 'completed']], f.object.work_order_status_eq),
                      { include_blank: 'Select Status..' },
                      { class: 'form-select form-select-sm' } %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-success btn-sm' %>
                      <%= link_to 'Reset', work_order_details_path, class: 'btn btn-secondary btn-sm', data: { turbo_frame: pagy_frame_id } %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @work_orders.any? %>
                  <% @work_orders.each do |work_order| %>
                    <tr>
                      <td class="text-center"><%= work_order.id %></td>
                      <td><%= work_order.work_order_rate_name %></td>
                      <td><%= work_order.block_number %></td>
                      <td class="text-center"><%= work_order.start_date&.strftime('%d-%m-%Y') || '-' %></td>
                      <td class="text-center">
                        <% badge_class = case work_order.work_order_status
                        when 'ongoing' then 'bg-info'
                        when 'pending' then 'bg-warning'
                        when 'amendment_required' then 'bg-danger'
                        when 'completed' then 'bg-success'
                        else 'bg-secondary'
                      end %>
                        <span class="badge <%= badge_class %>"><%= work_order.work_order_status&.humanize %></span>
                      </td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to work_order_detail_path(work_order), class: "btn btn-info btn-sm", title: "View Details", data: { turbo_frame: "_top" } do %>
                            <i class="bi bi-info-circle"></i>
                          <% end %>
                          <% if work_order.work_order_status.in?(%w[ongoing amendment_required]) %>
                            <%= link_to edit_work_order_detail_path(work_order), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: "_top" } do %>
                              <i class="bi bi-pencil"></i>
                            <% end %>
                          <% end %>
                          <%= button_to work_order_detail_path(work_order), form: { data: { turbo_confirm: "Are you sure you want to delete this work order?", turbo_frame: "_top" } }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No work orders found. <%= link_to 'Create a new work order', new_work_order_detail_path, class: 'text-decoration-none', data: { turbo_frame: "_top" } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Work Orders') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
