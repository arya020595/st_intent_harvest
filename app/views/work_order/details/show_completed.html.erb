<div class="container-fluid px-4 py-4">
  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb', breadcrumbs: [
    ['Work Order', work_order_details_path],
    ['Work Order Details', nil],
    ['View Work Order', nil]
  ] %>
  <!-- Back Button -->
  <div class="mb-3">
    <%= link_to work_order_details_path, class: "text-decoration-none text-success d-inline-flex align-items-center" do %>
      <i class="bi bi-arrow-left me-2"></i> Back to Work Order Details
    <% end %>
  </div>
  <!-- Header: Company Logo and Status Badge -->
  <%= render 'work_order/details/completed/header', work_order: @work_order %>
  <!-- Work Order Details Card -->
  <%= render 'work_order/details/completed/details_card', work_order: @work_order %>
  <!-- Resources & Machineries Table (resources_type only) -->
  <% if @work_order.resources_type? %>
    <%= render 'work_order/details/completed/resources_table', work_order: @work_order %>
  <% end %>
  <% if @work_order.normal_type? || @work_order.work_days_type? %>
    <!-- Workers Details Table (normal_type and work_days_type) -->
    <%= render 'work_order/details/completed/workers_table', work_order: @work_order %>
  <% end %>
  <!-- Work Order Process Timeline -->
  <%= render 'work_order/details/completed/timeline', work_order: @work_order %>
</div>
