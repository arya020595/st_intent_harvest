<tr>
  <td class="text-center"><%= work_order.id %></td>
  <td><%= work_order.work_order_rate_name %></td>
  <td><%= work_order.block_number %></td>
  <td class="text-center"><%= work_order.start_date&.strftime('%d-%m-%Y') || '-' %></td>
  <td class="text-center">
    <% badge_class = case work_order.work_order_status
      when 'ongoing' then 'bg-info'
      when 'pending' then 'bg-warning'
      when 'amendment_required' then 'bg-danger'
      when 'completed' then 'bg-success'
      else 'bg-secondary'
    end %>
    <span class="badge <%= badge_class %>"><%= work_order.work_order_status&.humanize %></span>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to work_order_detail_path(work_order), class: "btn btn-info btn-sm", title: "View Details" do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <% if work_order.work_order_status.in?(%w[ongoing amendment_required]) %>
        <%= link_to edit_work_order_detail_path(work_order), class: "btn btn-warning btn-sm", title: "Edit" do %>
          <i class="bi bi-pencil"></i>
        <% end %>
      <% end %>
      <%= link_to work_order_detail_path(work_order), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this work order?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
