<div class="container-fluid px-4 py-4 work-order-approvals" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Work Order Approvals</h5>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: work_order_approvals_path, html: { id: 'work-order-approval-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="table-success">
              <tr>
                <th class="text-center">
                  <%= sort_link(@q, :id, 'ID') %>
                </th>
                <th>
                  <%= sort_link(@q, :work_order_rate_work_order_name, 'Work Order Rate') %>
                </th>
                <th>
                  <%= sort_link(@q, :block_block_number, 'Block') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :start_date, 'Start Date') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :work_order_status, 'Status') %>
                </th>
                <th class="text-center">Actions</th>
              </tr>
              <tr>
                <th class="text-center">
                  <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                </th>
                <th>
                  <%= f.search_field :work_order_rate_work_order_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Rate..' %>
                </th>
                <th>
                  <%= f.search_field :block_block_number_cont, class: 'form-control form-control-sm', placeholder: 'Search Block..' %>
                </th>
                <th class="text-center">
                  <%= f.date_field :start_date_eq, class: 'form-control form-control-sm', placeholder: 'Date' %>
                </th>
                <th class="text-center">
                  <%= f.select :work_order_status_eq,
                      options_for_select([['Pending', 'pending'], ['Amendment Required', 'amendment_required'], ['Completed', 'completed']], f.object.work_order_status_eq),
                      { include_blank: 'Select Status..' },
                      { class: 'form-select form-select-sm' } %>
                </th>
                <th class="text-center">
                  <div class="d-flex gap-1 justify-content-center">
                    <%= f.submit 'Search', class: 'btn btn-success btn-sm' %>
                    <%= link_to 'Reset', work_order_approvals_path, class: 'btn btn-secondary btn-sm' %>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              <% if @work_orders.any? %>
                <% @work_orders.each do |work_order| %>
                  <tr>
                    <td class="text-center"><%= work_order.id %></td>
                    <td><%= work_order.work_order_rate.work_order_name %></td>
                    <td><%= work_order.block.block_number %></td>
                    <td class="text-center"><%= work_order.start_date&.strftime('%d-%m-%Y') || '-' %></td>
                    <td class="text-center">
                      <% badge_class = case work_order.work_order_status
                        when 'pending' then 'bg-warning'
                        when 'amendment_required' then 'bg-danger'
                        when 'completed' then 'bg-success'
                        else 'bg-secondary'
                      end %>
                      <span class="badge <%= badge_class %>"><%= work_order.work_order_status&.humanize %></span>
                    </td>
                    <td class="text-center">
                      <div class="btn-group btn-group-sm" role="group">
                        <%= link_to work_order_approval_path(work_order), class: "btn btn-info btn-sm", title: "View Details" do %>
                          <i class="bi bi-info-circle"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    No work orders found for approval.
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector(current: params[:per_page] || 10) %>
          <span class="text-muted small">
            <%= pagination_info(@pagy) %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
