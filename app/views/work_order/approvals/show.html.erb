<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Work Order Approval</h1>
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Block:</dt>
            <dd class="col-sm-9"><%= @work_order.block.block_number %></dd>
            <dt class="col-sm-3">Work Order Rate:</dt>
            <dd class="col-sm-9"><%= @work_order.work_order_rate.work_order_name %></dd>
            <dt class="col-sm-3">Start Date:</dt>
            <dd class="col-sm-9"><%= @work_order.start_date %></dd>
            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9"><span class="badge bg-<%= @work_order.work_order_status %>"><%= @work_order.work_order_status %></span></dd>
            <dt class="col-sm-3">Field Conductor:</dt>
            <dd class="col-sm-9"><%= @work_order.field_conductor_name %></dd>
            <dt class="col-sm-3">Approved By:</dt>
            <dd class="col-sm-9"><%= @work_order.approved_by %></dd>
            <dt class="col-sm-3">Approved At:</dt>
            <dd class="col-sm-9"><%= @work_order.approved_at %></dd>
          </dl>
          <div class="mt-3">
            <% if @work_order.may_approve? %>
              <%= link_to "Approve", approve_work_order_approval_path(@work_order), method: :patch, class: "btn btn-success" %>
            <% end %>
            <% if @work_order.may_request_amendment? %>
              <%= link_to "Request Amendment", reject_work_order_approval_path(@work_order), method: :patch, class: "btn btn-warning" %>
            <% end %>
            <%= link_to "Back", work_order_approvals_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
