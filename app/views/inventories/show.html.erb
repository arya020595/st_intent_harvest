<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Inventory Details</h1>
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9"><%= @inventory.name %></dd>
            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9"><%= @inventory.category&.name %></dd>
            <dt class="col-sm-3">Stock Quantity:</dt>
            <dd class="col-sm-9"><%= @inventory.stock_quantity %></dd>
            <dt class="col-sm-3">Unit:</dt>
            <dd class="col-sm-9"><%= @inventory.unit&.name %></dd>
            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9"><%= @inventory.price %></dd>
            <dt class="col-sm-3">Currency:</dt>
            <dd class="col-sm-9"><%= @inventory.currency %></dd>
            <dt class="col-sm-3">Supplier:</dt>
            <dd class="col-sm-9"><%= @inventory.supplier %></dd>
            <dt class="col-sm-3">Input Date:</dt>
            <dd class="col-sm-9"><%= @inventory.input_date %></dd>
          </dl>
          <div class="mt-3">
            <%= link_to "Edit", edit_inventory_path(@inventory), class: "btn btn-warning" %>
            <%= link_to "Back", inventories_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", inventory_path(@inventory), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
