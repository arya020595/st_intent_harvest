<%= form_with(model: inventory, local: true, id: form_id, class: "needs-validation", novalidate: true) do |form| %>
  <% if inventory.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <%= pluralize(inventory.errors.count, "error") %> prohibited this inventory item from being saved:
      </h5>
      <ul class="mb-0">
        <% inventory.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row g-3">

    <!-- Item Name -->
    <div class="col-md-6">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter item name", required: true %>
    </div>

    <!-- Category -->
    <div class="col-md-6">
      <%= form.label :category_id, class: "form-label" %>
      <%= form.collection_select :category_id, Category.order(:name), :id, :name,
            { include_blank: "Select category" }, class: "form-select" %>
    </div>

    <!-- Stock Quantity -->
    <div class="col-md-6">
      <%= form.label :stock_quantity, class: "form-label" %>
      <%= form.number_field :stock_quantity, class: "form-control", min: 0 %>
    </div>

    <!-- Unit -->
    <div class="col-md-6">
      <%= form.label :unit_id, class: "form-label" %>
      <%= form.collection_select :unit_id, Unit.order(:name), :id, :name,
            { include_blank: "Select unit" }, class: "form-select" %>
    </div>

    <!-- Price -->
    <div class="col-md-6">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, class: "form-control", placeholder: "0.00", step: 0.01, min: 0 %>
    </div>

    <!-- Supplier -->
    <div class="col-md-6">
      <%= form.label :supplier, class: "form-label" %>
      <%= form.text_field :supplier, class: "form-control" %>
    </div>

    <!-- Input Date -->
    <div class="col-md-6">
      <%= form.label :input_date, class: "form-label" %>
      <%= form.date_field :input_date, class: "form-control" %>
    </div>

  </div>
  
  <hr/>

  <div class="mt-4 d-flex justify-content-end">
    <%= button_tag type: :submit, class: "btn btn-success" do %>
      <i class="bi bi-save-fill text-white me-1"></i> Save
    <% end %>
  </div>
<% end %>
