<div class="container-fluid px-4 py-4 workers-profile" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Workers Profile</h5>
      <%= link_to new_worker_path, class: "btn btn-light btn-sm" do %>
        <i class="bi bi-plus-circle"></i> Add Worker
      <% end %>
    </div>
    <div class="card-body">
      <%= turbo_frame_tag 'workers' do %>
        <%= search_form_for @q, url: workers_path, html: { id: 'worker-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-success">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'Worker ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :name, 'Worker Name') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :worker_type, 'Worker Type') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :is_active, 'Status') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :hired_date, 'Hired Date') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID (e.g., 137)', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th>
                    <%= f.select :worker_type_eq, 
                      options_for_select([['Part - Time', 'Part - Time'], ['Full - Time', 'Full - Time']], f.object.worker_type_eq),
                      { include_blank: 'Select Type..' }, 
                      { class: 'form-select form-select-sm' } %>
                  </th>
                  <th class="text-center">
                    <%= f.select :is_active_eq,
                      options_for_select([['Active', true], ['Inactive', false]], f.object.is_active_eq),
                      { include_blank: 'Select Status..' },
                      { class: 'form-select form-select-sm' } %>
                  </th>
                  <th class="text-center">
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y"
                           data-flatpickr-field-name-value="q[hired_date]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :hired_date_gteq, value: params.dig(:q, :hired_date_gteq) %>
                    <%= f.hidden_field :hired_date_lteq, value: params.dig(:q, :hired_date_lteq) %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-success btn-sm' %>
                      <%= link_to 'Reset', workers_path, class: 'btn btn-secondary btn-sm', data: { turbo_frame: 'workers' } %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @workers.any? %>
                  <% @workers.each do |worker| %>
                    <tr>
                      <td class="text-center"><%= worker.id %></td>
                      <td><%= worker.name %></td>
                      <td><%= worker.worker_type %></td>
                      <td class="text-center">
                        <% if worker.is_active %>
                          <span class="badge bg-success">Active</span>
                        <% else %>
                          <span class="badge bg-secondary">Inactive</span>
                        <% end %>
                      </td>
                      <td class="text-center"><%= worker.hired_date&.strftime('%d-%m-%Y') || '-' %></td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to worker_path(worker), class: "btn btn-info btn-sm", title: "View Details" do %>
                            <i class="bi bi-info-circle"></i>
                          <% end %>
                          <%= link_to edit_worker_path(worker), class: "btn btn-warning btn-sm", title: "Edit" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= link_to worker_path(worker), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{worker.name}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No workers found. <%= link_to 'Add a new worker', new_worker_path, class: 'text-decoration-none' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Workers') %>
            </span>
          </div>
          <div>
            <%= pagy_bootstrap_nav(@pagy, aria_label: 'Workers pages') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
