<!-- Modal container kept on the page; content is loaded via Turbo Frame -->
<div class="modal fade"
     id="workerModal"
     tabindex="-1"
     aria-labelledby="workerModalLabel"
     aria-hidden="true"
     data-controller="modal"
     data-modal-frame-id-value="modal"
     data-action="turbo:frame-load->modal#show turbo:submit-end->modal#formSubmitted hidden.bs.modal->modal#clearFrame"
  data-bs-backdrop="static"
  data-bs-keyboard="false">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= turbo_frame_tag "modal", data: { action: "turbo:frame-load->modal#show" } do %>
        <!-- Form content will be injected here -->
      <% end %>
    </div>
  </div>
</div>
