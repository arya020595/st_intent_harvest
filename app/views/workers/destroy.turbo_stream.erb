<%= turbo_stream.remove dom_id(@worker) %>
<%= turbo_stream.replace "flash_messages" do %>
  <div class="alert alert-info alert-dismissible fade show" role="alert" data-controller="flash" data-flash-delay-value="5000">
    <i class="bi bi-info-circle-fill"></i>
    <%= flash[:notice] || flash.now[:notice] || 'Worker deleted successfully.' %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
