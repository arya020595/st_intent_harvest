<%= turbo_frame_tag "modal" do %>
  <div class="text-center" style="padding: 30px; margin: 0 auto; position: relative;">
    <span class="btn-close" data-bs-dismiss="modal" style="position: absolute; top: 10px; right: 10px;"></span>

    <i class="bi bi-exclamation-circle text-danger" style="font-size: 4rem; margin: 20px 0;"></i>

    <p id="deleteConfirmMessage" class="mb-3">
      Are you sure you want to delete this worker <strong>"<%= @worker.name %>"</strong>?
    </p>

    <%= form_with url: worker_path(@worker), method: :delete, local: true, id: "deleteInventoryForm" do %>
      <div class="mt-3 d-flex justify-content-center gap-2">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
        <%= button_tag "Yes! Delete", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
<% end %>
