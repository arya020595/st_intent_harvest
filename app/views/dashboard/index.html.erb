<div class="container py-4">
  <h1 class="mb-4">Dashboard</h1>

  <!-- Statistics Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-3">
      <div class="card text-bg-primary">
        <div class="card-body">
          <h5 class="card-title">Ongoing</h5>
          <p class="card-text display-4"><%= @ongoing_work_orders %></p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-bg-warning">
        <div class="card-body">
          <h5 class="card-title">Pending Approval</h5>
          <p class="card-text display-4"><%= @pending_work_orders %></p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-bg-danger">
        <div class="card-body">
          <h5 class="card-title">Amendment Required</h5>
          <p class="card-text display-4"><%= @amendment_required_work_orders %></p>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card text-bg-success">
        <div class="card-body">
          <h5 class="card-title">Completed</h5>
          <p class="card-text display-4"><%= @completed_work_orders %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Work Orders -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Recent Work Orders</h5>
    </div>
    <div class="card-body">
      <% if @recent_work_orders.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Start Date</th>
                <th>Block</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_work_orders.each do |work_order| %>
                <tr>
                  <td>#<%= work_order.id %></td>
                  <td><%= work_order.start_date&.strftime("%d %b %Y") %></td>
                  <td><%= work_order.block&.block_number %></td>
                  <td>
                    <span class="badge 
                      <%= case work_order.work_order_status
                          when 'ongoing' then 'bg-primary'
                          when 'pending' then 'bg-warning'
                          when 'amendment_required' then 'bg-danger'
                          when 'completed' then 'bg-success'
                          else 'bg-secondary'
                          end %>">
                      <%= work_order.work_order_status.humanize %>
                    </span>
                  </td>
                  <td>
                    <%= link_to "View", "#", class: "btn btn-sm btn-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted">No work orders found.</p>
      <% end %>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="row mt-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-flex gap-2">
            <%= link_to "New Work Order", new_work_order_detail_path, class: "btn btn-primary" %>
            <%= link_to "View All Work Orders", work_order_details_path, class: "btn btn-outline-primary" %>
            <%= link_to "Pending Approvals", work_order_approvals_path, class: "btn btn-outline-warning" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
