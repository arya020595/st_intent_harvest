<div id="work_orders_pay_calculations" class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover table-sm mb-0">
        <thead class="header-row">
          <tr class="header-row">
            <th class="text-center">Deduction</th>
            <th class="text-center">Employee (RM)</th>
            <th class="text-end">Employer (RM)</th>
          </tr>
        </thead>
        <tbody>
          <% pay_calculation_detail.deduction_breakdown.each_with_index do |(deduction_code, data), index| %>
            <tr>
              <td class="text-center"><%= data['name'] %></td>
              <td class="text-center"><%= data['employee_amount'] == 0 ? '-' : number_to_currency(data['employee_amount'], unit: '', separator: '.', delimiter: ',', precision: 2) %></td>
              <td class="text-end"><%= data['employer_amount'] == 0 ? '-' : number_to_currency(data['employer_amount'], unit: '', separator: '.', delimiter: ',', precision: 2) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
