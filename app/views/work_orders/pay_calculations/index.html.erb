<div id="work_orders_pay_calculations" class="container-fluid px-4 py-4 pay-calculations" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="work_orders_page">
      <h1 class="mb-0">Pay Calculations</h1>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: work_orders_pay_calculations_path, html: { id: 'pay-calculation-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="header-row">
              <tr class="header-row">
                <th class="text-center"></th>
                <th class="text-center">
                  <%= sort_link(@q, :id, 'ID') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :month_year, 'Month/Year') %>
                </th>
                <th class="text-end">
                  <%= sort_link(@q, :total_net_salary, 'Overall Total') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :updated_at, 'Updated At') %>
                </th>
              </tr>
              <tr>
                <th class="text-center">
                  <div class="d-flex gap-1 justify-content-center">
                    <%= f.submit 'Search', class: 'btn btn filter-btn' %>
                    <%= link_to 'Reset', work_orders_pay_calculations_path, class: 'btn btn reset-btn' %>
                  </div>
                </th>
                <th class="text-center">
                  <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                </th>
                <th>
                  <%= f.search_field :month_year_cont, class: 'form-control form-control-sm', placeholder: 'Search Month/Year..' %>
                </th>
                <th class="text-end">
                  <%= f.number_field :total_net_salary_eq, class: 'form-control form-control-sm', placeholder: 'Total', step: '0.01' %>
                </th>
                <th class="text-center">
                  <div class="input-group input-group-sm">
                    <input type="text"
                           class="form-control form-control-sm cursor-pointer"
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y"
                           data-flatpickr-field-name-value="q[updated_at]">
                    <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                      <i class="bi bi-calendar-range"></i>
                    </span>
                  </div>
                  <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                  <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                </th>
              </tr>
            </thead>
            <tbody>
              <% if @pay_calculations.any? %>
                <%= render partial: 'pay_calculation_row', collection: @pay_calculations, as: :pay_calculation %>
              <% else %>
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    No pay calculations found. <%= link_to 'Create a new pay calculation', new_work_orders_pay_calculation_path, class: 'text-decoration-none' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector %>
          <span class="text-muted small">
            <%== @pagy.info_tag(item_name: 'Pay Calculations') %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
