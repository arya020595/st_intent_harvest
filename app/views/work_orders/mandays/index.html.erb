<div id="mandays" class="container-fluid px-4 py-4 block-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="mandays_page">
      <h1>Mandays</h1>
      <div class="d-flex justify-content-end mb-2">
        <%= link_to new_work_orders_manday_path,
                    class: "add-button btn btn-primary btn-sm",
                    **modal_link_data do %>
          <i class="bi bi-plus-circle-fill text-white me-1"></i> Add New
        <% end %>
      </div>

      <%= search_form_for @q, url: work_orders_mandays_path, html: { id: 'manday-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="header-row">
              <tr class="header-row">
                <th></th>
                <th class="text-center"><%= sort_link(@q, :work_month, 'Work Month') %></th>
                <th class="text-center"><%= sort_link(@q, :created_at, 'Created At') %></th>
                <th class="text-center"><%= sort_link(@q, :updated_at, 'Updated At') %></th>
              </tr>
              <tr>
                <th class="text-center">
                  <div class="filter-buttons justify-content-center">
                    <%= link_to 'Reset', work_orders_mandays_path, class: "btn reset-btn", style: 'font-weight: normal; width: 120px;' %>
                  </div>
                </th>
                <th>
                  <%= f.search_field :work_month_str_cont,
                  class: 'form-control form-control-sm',
                  placeholder: 'Search Month..',
                  data: { action: "input->search-form#autoSubmit" } %>

                </th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody id="manday_rows">
              <% if @mandays.any? %>
                <% @mandays.each do |manday| %>
                  <tr>
                    <td class="text-center">
                      <%= link_to work_orders_manday_path(manday),
                                  class: "action-btn info btn btn-sm me-1" do %>
                        <i class="bi bi-info-circle-fill"></i>
                      <% end %>

                      <%= link_to edit_work_orders_manday_path(manday),
                                  class: "action-btn warning btn btn-sm" do %>
                        <i class="bi bi-pencil-fill"></i>
                      <% end %>
                    </td>
                    <td class="text-center"><%= manday.work_month&.strftime("%B %Y") %></td>
                    <td class="text-center"><%= manday.created_at&.strftime("%d-%m-%Y") %></td>
                    <td class="text-center"><%= manday.updated_at&.strftime("%d-%m-%Y") %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">
                    No mandays found.
                    <%= link_to 'Add a new manday', new_work_orders_manday_path, class: 'text-decoration-none', **modal_link_data %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector(current: params[:per_page] || 10) %>
          <span class="text-muted small">
            <%== @pagy.info_tag(item_name: 'Mandays') %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
