<%# Centered company logo and summary, status badge on the right %>
<div class="d-flex justify-content-between align-items-start mb-4">
  <div></div>
  <div class="text-center w-100">
    <%= image_tag ENV['APP_LOGO_WEBP_URL'], alt: 'Company Logo', class: 'mx-auto d-block', style: 'width:120px; max-width: 140px;' %>
    <p class="mb-0 mt-3 fw-bold text-center"><%= ENV['APP_COMPANY_FULL_NAME'] %> (977470-K)</p>
    <p class="mb-0 text-center">Distribution of Piece Rated Work</p>
  </div>
  <div class="text-end">
    <div class="fw-bold fs-5 d-flex align-items-center justify-content-center">
      <span class="me-2">Status</span>
      <span class="badge rounded-pill <%= work_order_status_badge_class(work_order.work_order_status, variant: :info) %>">
        <%= work_order_status_text(work_order.work_order_status) %>
      </span>
    </div>
  </div>
</div>
