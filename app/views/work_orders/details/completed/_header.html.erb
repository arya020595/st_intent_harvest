<%# Centered company logo and summary, status badge on the right %>
<div class="d-flex justify-content-between align-items-start mb-4">
  <div></div>
  <div class="text-center w-100">
    <%= image_tag 'intent-harvest-logo.webp', alt: 'Company Logo', class: 'mx-auto d-block', style: 'width:120px; max-width: 140px;' %>
    <p class="mb-0 mt-3 fw-bold text-center">Intent Harvest Sdn. Bhd. (977470-K)</p>
    <p class="mb-0 text-center">Distribution of Piece Rated Work</p>
  </div>
  <div class="text-end">
    <div class="fw-bold fs-5 d-flex align-items-center justify-content-center">
      <span class="me-2">Status</span>
      <% badge_class = case work_order.work_order_status
                      when 'ongoing' then 'bg-info'
                      when 'pending' then 'bg-warning'
                      when 'amendment_required' then 'bg-danger'
                      when 'completed' then 'bg-success'
                      else 'bg-secondary'
                    end %>
      <span class="badge rounded-pill <%= badge_class %>"><%= work_order.work_order_status == 'pending' ? 'Pending Approval' : work_order.work_order_status&.humanize %></span>
    </div>
  </div>
</div>
