<!-- Resources & Machineries Section -->
<div class="mb-5">
  <div class="border-bottom pb-2">
    <div class="fw-bold fs-4" style="color: #155e1a">Resources & Machineries</div>
  </div>
  <div class="card-body mt-3">
    <div class="table-responsive">
      <table class="table table-hover table-sm mb-0">
        <thead class="table-success">
          <tr>
            <th style="width: 25%">Resources Name</th>
            <th style="width: 20%">Resource Category</th>
            <th style="width: 15%">Price (RM)</th>
            <th style="width: 15%">Unit</th>
            <th style="width: 15%">Amount Used</th>
          </tr>
        </thead>
        <tbody>
          <% if work_order.work_order_items.any? %>
            <% work_order.work_order_items.each do |item| %>
              <tr>
                <td><%= item.item_name %></td>
                <td><%= item.category_name || '-' %></td>
                <td><%= number_to_currency(item.price, unit: '', precision: 2) %></td>
                <td><%= item.unit_name || '-' %></td>
                <td><%= item.amount_used %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="text-center text-muted">No resources used</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
