<div id="url-manager"></div>
<div id="productions" class="container-fluid px-4 py-4 productions-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="productions_page">
      <h1 class="mb-0">Production</h1>
      <div class="d-flex justify-content-end gap-2">
        <% date_filtered = params.dig(:q, :date_gteq).present? || params.dig(:q, :date_lteq).present? %>
        <% export_params = { format: :csv } %>
        <% export_params[:q] = safe_export_params if safe_export_params.present? %>
        <%= link_to productions_path(export_params),
                    class: "add-button btn btn-sm #{date_filtered ? '' : 'disabled'}",
                    style: "background-color: #28a745; color: white;#{date_filtered ? '' : ' pointer-events: none; opacity: 0.6;'}",
                    data: { turbo: false },
                    aria: { disabled: !date_filtered },
                    tabindex: (date_filtered ? nil : -1),
                    title: (date_filtered ? '' : 'Please select a date range to export') do %>
          <i class="bi bi-file-earmark-spreadsheet text-white me-1"></i> Export CSV
        <% end %>
        <% export_params_pdf = { format: :pdf } %>
        <% export_params_pdf[:q] = safe_export_params if safe_export_params.present? %>
        <%= link_to productions_path(export_params_pdf),
                    class: "add-button btn btn-sm #{date_filtered ? '' : 'disabled'}",
                    style: "background-color: #dc3545; color: white;#{date_filtered ? '' : ' pointer-events: none; opacity: 0.6;'}",
                    data: { turbo: false },
                    aria: { disabled: !date_filtered },
                    tabindex: (date_filtered ? nil : -1),
                    target: "_blank",
                    title: (date_filtered ? '' : 'Please select a date range to export') do %>
          <i class="bi bi-file-earmark-pdf text-white me-1"></i> Export PDF
        <% end %>
        <% if record_policy(Production.new, ProductionPolicy).new? %>
          <%= link_to new_production_path,
                      class: "add-button btn btn-primary btn-sm",
                      **modal_link_data do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Daily Record
          <% end %>
        <% else %>
          <%= link_to new_production_path,
                      class: "add-button btn btn-primary btn-sm" do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Production
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <% date_filtered = params.dig(:q, :date_gteq).present? || params.dig(:q, :date_lteq).present? %>
        <% if !date_filtered %>
          <div class="alert alert-info alert-dismissible fade show d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            <div>
              <strong>Tip:</strong> Select a date range above to enable the Export CSV and Export PDF buttons. This helps you export specific production records.
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% end %>
        <%= search_form_for @q, url: productions_path, html: { id: 'production-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center"><%= sort_link(@q, :date, 'Date') %></th>
                  <th class="text-center"><%= sort_link(@q, :ticket_estate_no, 'Ticket Estate No.') %></th>
                  <th class="text-center"><%= sort_link(@q, :ticket_mill_no, 'Ticket Mill No.') %></th>
                  <th class="text-center"><%= sort_link(@q, :mill_name, 'Mills') %></th>
                  <th class="text-center"><%= sort_link(@q, :block_block_number, 'Block No.') %></th>
                  <th class="text-center"><%= sort_link(@q, :total_bunches, 'Total Bunches') %></th>
                  <th class="text-center"><%= sort_link(@q, :total_weight_ton, 'Total Weight (Ton)') %></th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="filter-buttons">
                      <%= link_to 'Reset', productions_path, class: 'btn reset-btn', style: "width: 120px;" %>
                    </div>
                  </th>
                  <th class="text-center">
                    <div class="input-group input-group-sm"
                            data-controller="flatpickr"
                            data-flatpickr-mode-value="range"
                            data-flatpickr-date-format-value="d-m-Y"
                            data-flatpickr-field-name-value="q[date]"
                        >
                      <input type="text"
                             class="form-control form-control-sm cursor-pointer"
                             placeholder="Select Date Range"
                             data-flatpickr-target="input"
                             >
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :date_gteq, value: params.dig(:q, :date_gteq) %>
                    <%= f.hidden_field :date_lteq, value: params.dig(:q, :date_lteq) %>
                  </th>
                  <th><%= f.search_field :ticket_estate_no_cont, class: 'form-control form-control-sm', placeholder: 'Enter Ticket...', data: { action: "input->search-form#autoSubmit" } %></th>
                  <th><%= f.search_field :ticket_mill_no_cont, class: 'form-control form-control-sm', placeholder: 'Enter Ticket...', data: { action: "input->search-form#autoSubmit" } %></th>
                  <th>
                    <%= f.select :mill_id_eq,
                        options_from_collection_for_select(Mill.ordered, :id, :name, params.dig(:q, :mill_id_eq)),
                        { include_blank: 'Select Mill' },
                        class: 'form-select form-select-sm',
                        data: { action: "change->search-form#autoSubmit" } %>
                  </th>
                  <th>
                    <%= f.select :block_id_eq,
                        options_from_collection_for_select(Block.order(:block_number), :id, :block_number, params.dig(:q, :block_id_eq)),
                        { include_blank: 'Select Block' },
                        class: 'form-select form-select-sm',
                        data: { action: "change->search-form#autoSubmit" } %>
                  </th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="production_rows">
                <% if @productions.any? %>
                  <%= render partial: 'production_row', collection: @productions, as: :production %>
                <% else %>
                  <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                      No production records found.
                      <% if record_policy(Production.new, ProductionPolicy).new? %>
                        <%= link_to 'Add a new record', new_production_path, class: 'text-decoration-none', **modal_link_data %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small"><%== @pagy.info_tag(item_name: 'Records') %></span>
          </div>
          <div><%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "modal" %>
