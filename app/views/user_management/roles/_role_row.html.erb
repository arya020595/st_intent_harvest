<tr id="<%= dom_id(role) %>">
  <td class="text-center">
    <div class="action-buttons">
      <!-- VIEW: Wide -->
      <%= link_to user_management_role_path(role),
      class: "action-btn info",
      title: "View Details",
      data: { turbo_frame: "modal", modal_size: "modal-xl" } do %>
        <i class="bi bi-info-circle-fill"></i>
      <% end %>
      <!-- EDIT: Medium -->
      <%= link_to edit_user_management_role_path(role),
      class: "action-btn warning",
      title: "Edit",
      data: { turbo_frame: "modal", modal_size: "modal-xl" } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
      <!-- DELETE: Medium -->
      <%= link_to confirm_delete_user_management_role_path(role),
      class: "action-btn danger",
      title: "Delete",
      **modal_link_data(size: "modal-md") do %>
        <i class="bi bi-trash-fill"></i>
      <% end %>
    </div>
  </td>
  <td class="text-center"><%= role.id %></td>
  <td><%= role.name %></td>
  <td class="text-center"><%= role.created_at.strftime("%b %d, %Y %H:%M") %></td>
  <td class="text-center"><%= role.updated_at.strftime("%b %d, %Y %H:%M") %></td>
</tr>
