<%= turbo_frame_tag "modal" do %>
  <div class="text-center p-4" style="max-width: 450px; margin: auto;">
    <span class="btn-close" data-bs-dismiss="modal" style="position: absolute; top: 10px; right: 10px;"></span>

    <i class="bi bi-exclamation-circle text-danger" style="font-size: 6rem;"></i>

    <p>
      Are you sure you want to delete role <strong>"<%= @role.name %>"</strong>?
    </p>

    <%= form_with url: user_management_role_path(@role), method: :delete, local: true do %>
      <button class="btn btn-danger me-2" data-bs-dismiss="modal">Cancel</button>
      <%= submit_tag "Yes! Delete", class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>
