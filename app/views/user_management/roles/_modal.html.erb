<!-- Modal container kept on the page; content is loaded via Turbo Frame -->
<div class="modal fade"
     id="roleModal"
     tabindex="-1"
     aria-labelledby="roleModalLabel"
     aria-hidden="true"
     data-controller="modal"
     data-modal-frame-id-value="modal">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <!-- modal-xl for larger screens, will shrink automatically on smaller screens -->
    <div class="modal-content">
      <%= turbo_frame_tag "modal", data: { action: "turbo:frame-load->modal#show" } do %>
        <!-- Form content will be injected here -->
      <% end %>
    </div>
  </div>
</div>
