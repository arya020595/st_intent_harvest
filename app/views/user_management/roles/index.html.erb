<div class="container-fluid px-4 py-4 roles-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Roles Management</h5>
      <%= link_to new_user_management_role_path, class: "btn btn-light btn-sm" do %>
        <i class="bi bi-plus-circle"></i> Add Role
      <% end %>
    </div>
    <div class="card-body">
      <%= turbo_pagy_frame do %>
        <%= search_form_for @q, url: user_management_roles_path, html: { id: 'role-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-primary">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :name, 'Name') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th>
                    <%= f.search_field :created_at_gteq, class: 'form-control form-control-sm', placeholder: 'From..', type: 'datetime-local' %>
                  </th>
                  <th>
                    <%= f.search_field :updated_at_lteq, class: 'form-control form-control-sm', placeholder: 'To..', type: 'datetime-local' %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-primary btn-sm' %>
                      <%= link_to 'Reset', user_management_roles_path, class: 'btn btn-secondary btn-sm', data: { turbo_frame: pagy_frame_id } %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @roles.any? %>
                  <% @roles.each do |role| %>
                    <tr>
                      <td class="text-center"><%= role.id %></td>
                      <td><%= role.name %></td>
                      <td>
                        <small class="text-muted"><%= role.created_at.strftime("%b %d, %Y %H:%M") if role.created_at %></small>
                      </td>
                      <td>
                        <small class="text-muted"><%= role.updated_at.strftime("%b %d, %Y %H:%M") if role.updated_at %></small>
                      </td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to user_management_role_path(role), class: "btn btn-info btn-sm", title: "View Details" do %>
                            <i class="bi bi-info-circle"></i>
                          <% end %>
                          <%= link_to edit_user_management_role_path(role), class: "btn btn-warning btn-sm", title: "Edit" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= link_to user_management_role_path(role), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{role.name}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                      No roles found. <%= link_to 'Add a new role', new_user_management_role_path, class: 'text-decoration-none' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Roles') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
