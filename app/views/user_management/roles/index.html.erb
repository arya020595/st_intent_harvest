<div id="flash_messages">
  <%= render "shared/flash" %>
</div>
<div id="url-manager"></div>
<div id="roles" class="container-fluid px-4 py-4 roles-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="roles_page">
      <h1 class="mb-0">User Management - Roles</h1>
      <div class="d-flex justify-content-end">
        <%= link_to new_user_management_role_path, class: "add-button btn btn-primary btn-sm", **modal_link_data(size: 'modal-xl') do %>
          <i class="bi bi-plus-circle-fill text-white me-1"></i>Add Role
        <% end %>
      </div>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: user_management_roles_path, html: { id: 'role-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="header-row">
              <tr class="header-row">
                <th></th>
                <th class="text-center">
                  <%= sort_link(@q, :id, 'ID') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :name, 'Name') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :created_at, 'Created At') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :updated_at, 'Updated At') %>
                </th>
              </tr>
              <tr>
                <th class="text-center">
                  <div class="filter-buttons">
                    <%= button_tag 'Search', type: "submit", class: 'btn filter-btn' %>
                    <%= link_to 'Reset', user_management_roles_path, class: 'btn reset-btn', style: 'font-weight: normal;' %>
                  </div>
                </th>
                <th class="text-center">
                  <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                </th>
                <th>
                  <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                </th>
                <th>
                  <div class="input-group input-group-sm">
                    <input type="text"
                           class="form-control form-control-sm cursor-pointer"
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[created_at]">
                    <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                      <i class="bi bi-calendar-range"></i>
                    </span>
                  </div>
                  <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                  <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                </th>
                <th>
                  <div class="input-group input-group-sm">
                    <input type="text"
                           class="form-control form-control-sm cursor-pointer"
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[updated_at]">
                    <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                      <i class="bi bi-calendar-range"></i>
                    </span>
                  </div>
                  <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                  <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                </th>
              </tr>
            </thead>
            <tbody id="roles-table-body">
              <% if @roles.any? %>
                <%= render partial: 'role_row', collection: @roles, as: :role %>
              <% else %>
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    No roles found. <%= link_to 'Add a new role', new_user_management_role_path, class: 'text-decoration-none', **modal_link_data(size: 'modal-xl') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector(current: params[:per_page] || 10) %>
          <span class="text-muted small">
            <%== @pagy.info_tag(item_name: 'Roles') %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'modal' %>
