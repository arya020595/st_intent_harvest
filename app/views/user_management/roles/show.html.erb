<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Role Details</h1>
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9"><%= @role.name %></dd>
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9"><%= @role.description %></dd>
            <dt class="col-sm-3">Permissions:</dt>
            <dd class="col-sm-9">
              <ul>
                <% @role.permissions.each do |permission| %>
                  <li><%= permission.subject %> - <%= permission.action %></li>
                <% end %>
              </ul>
            </dd>
          </dl>
          <div class="mt-3">
            <%= link_to "Edit", edit_user_management_role_path(@role), class: "btn btn-warning" %>
            <%= link_to "Back", user_management_roles_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", user_management_role_path(@role), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
