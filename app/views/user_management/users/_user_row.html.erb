<tr id="<%= dom_id(user) %>">
    <td class="text-center">
    <div class="action-buttons">
      <%= link_to user_management_user_path(user), class: "action-btn info", title: "View Details", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-info-circle-fill"></i>
      <% end %>
      <%= link_to edit_user_management_user_path(user), class: "action-btn warning", title: "Edit", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
      <%= link_to confirm_delete_user_management_user_path(user),
        class: "action-btn danger",
        title: "Delete",
        data: { turbo_frame: "modal" } do %>
        <i class="bi bi-trash-fill"></i>
    <% end %>
    </div>
  </td>
  <td class="text-center"><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role&.name || 'N/A' %></td>

    <td class="text-center">
    <% if user.is_active %>
      <span class="text-success fw-bold">Active</span>
    <% else %>
      <span class="text-danger fw-bold">Inactive</span>
    <% end %>
  </td>
    <td class="text-center text-muted"><%= user.created_at.strftime("%b %d, %Y %H:%M") if user.created_at %></td>
    <td class="text-center text-muted"><%= user.updated_at.strftime("%b %d, %Y %H:%M") if user.updated_at %></td>
</tr>
