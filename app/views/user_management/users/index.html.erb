<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Users</h1>
      <div class="mb-3">
        <%= link_to "New User", new_user_management_user_path, class: "btn btn-primary" %>
      </div>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role&.name %></td>
                <td><%= user.is_active ? "Active" : "Inactive" %></td>
                <td>
                  <%= link_to "Show", user_management_user_path(user), class: "btn btn-sm btn-info" %>
                  <%= link_to "Edit", edit_user_management_user_path(user), class: "btn btn-sm btn-warning" %>
                  <%= link_to "Delete", user_management_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
