<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>User Details</h1>
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9"><%= @user.name %></dd>
            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9"><%= @user.email %></dd>
            <dt class="col-sm-3">Role:</dt>
            <dd class="col-sm-9"><%= @user.role&.name %></dd>
            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9"><%= @user.is_active ? "Active" : "Inactive" %></dd>
            <dt class="col-sm-3">Last Sign In:</dt>
            <dd class="col-sm-9"><%= @user.current_sign_in_at %></dd>
          </dl>
          <div class="mt-3">
            <%= link_to "Edit", edit_user_management_user_path(@user), class: "btn btn-warning" %>
            <%= link_to "Back", user_management_users_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", user_management_user_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
