<nav aria-label="breadcrumb" class="mb-3 bg-success text-white px-3 py-2 rounded">
  <ol class="breadcrumb mb-0" style="background: none; padding-left: 0;">
    <% breadcrumbs.each_with_index do |(text, url), index| %>
      <% if index == breadcrumbs.length - 1 %>
        <li class="breadcrumb-item fw-bold text-white" aria-current="page"><%= text %></li>
      <% elsif url.present? %>
        <li class="breadcrumb-item"><%= link_to text, url, class: "text-decoration-none text-white" %></li>
      <% else %>
        <li class="breadcrumb-item text-white"><%= text %></li>
      <% end %>
    <% end %>
  </ol>
</nav>
