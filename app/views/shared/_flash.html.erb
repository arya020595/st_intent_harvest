<% if flash.any? %>
  <% flash.each do |type, message| %>
    <% alert_type = case type.to_sym
                    when :notice then 'success'
                    when :alert then 'danger'
                    when :error then 'danger'
                    when :warning then 'warning'
                    else 'info'
                    end %>
    <div class="alert alert-<%= alert_type %> alert-dismissible fade show" role="alert" data-controller="flash" data-flash-delay-value="5000">
      <% icon = case type.to_sym
               when :notice then 'check-circle-fill'
               when :alert, :error then 'exclamation-triangle-fill'
               when :warning then 'exclamation-triangle-fill'
               when :info then 'info-circle-fill'
               else 'info-circle-fill'
               end %>
      <i class="bi bi-<%= icon %>"></i>
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
