<div id="flash_messages">
  <%= render "shared/flash" %>
</div>
<div id="url-manager"></div>
<div id="block_no" class="container-fluid px-4 py-4 block-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="block_no_page">
      <h1>Master Data - Block No.</h1>
      <div class="d-flex justify-content-end">
        <%= link_to new_master_data_block_path,
                    class: "add-button btn btn-primary btn-sm",
                    **modal_link_data do %>
          <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Block
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: master_data_blocks_path, html: { id: 'block-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :block_number, 'Block No.') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :hectarage, 'Hectarage') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="filter-buttons">
                      <%= button_tag "Search", type: "submit", class: "btn filter-btn" %>
                      <%= link_to 'Reset', master_data_blocks_path, class: "btn reset-btn", style: 'font-weight: normal;' %>
                    </div>
                  </th>
                  <th>
                    <%= f.search_field :block_number_cont, class: 'form-control form-control-sm', placeholder: 'Search Block Number..' %>
                  </th>
                  <th class="text-center">
                    <%= f.number_field :hectarage_eq, class: 'form-control form-control-sm', placeholder: 'Hectarage', step: 0.01 %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text"
                            class="form-control form-control-sm cursor-pointer"
                            placeholder="Select Date Range"
                            data-controller="flatpickr"
                            data-flatpickr-mode-value="range"
                            data-flatpickr-date-format-value="d-m-Y H:i"
                            data-flatpickr-enable-time-value="true"
                            data-flatpickr-field-name-value="q[created_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                    <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text"
                            class="form-control form-control-sm cursor-pointer"
                            placeholder="Select Date Range"
                            data-controller="flatpickr"
                            data-flatpickr-mode-value="range"
                            data-flatpickr-date-format-value="d-m-Y H:i"
                            data-flatpickr-enable-time-value="true"
                            data-flatpickr-field-name-value="q[updated_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                    <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                  </th>
                </tr>
              </thead>
              <tbody id="block_rows">
                <% if @blocks.any? %>
                  <%= render partial: 'block_row', collection: @blocks, as: :block %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No blocks found. <%= link_to 'Add a new block', new_master_data_block_path, class: 'text-decoration-none', **modal_link_data %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Blocks') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "modal" %>
