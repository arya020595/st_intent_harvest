<tr id="<%= dom_id(block) %>">
  <td class="text-center"><%= block.id %></td>
  <td><%= block.block_number %></td>
  <td class="text-center"><%= number_with_precision(block.hectarage, precision: 2) if block.hectarage %></td>
  <td>
    <small class="text-muted"><%= block.created_at.strftime("%b %d, %Y %H:%M") if block.created_at %></small>
  </td>
  <td>
    <small class="text-muted"><%= block.updated_at.strftime("%b %d, %Y %H:%M") if block.updated_at %></small>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to master_data_block_path(block), class: "btn btn-info btn-sm", title: "View Details" do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <%= link_to edit_master_data_block_path(block), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to master_data_block_path(block), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{block.block_number}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
