<tr id="<%= dom_id(block) %>">
  <td class="text-center">
    <div class="action-buttons">

  <%= link_to master_data_block_path(block),
            class: "action-btn info",
            title: "View Details",
            data: { turbo_frame: "modal" } do %>
        <i class="bi bi-info-circle-fill"></i>
      <% end %>

      <%= link_to edit_master_data_block_path(block),
                  class: "action-btn warning",
                  title: "Edit",
                  data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>

      <%= link_to confirm_delete_master_data_block_path(block),
                  class: "action-btn danger",
                  title: "Delete",
                  data: { turbo_frame: "modal" } do %>
        <i class="bi bi-trash-fill"></i>
      <% end %>



    </div>
  </td>

  <td><%= block.block_number %></td>

  <td class="text-center">
    <%= number_with_precision(block.hectarage, precision: 2) if block.hectarage %>
  </td>

<td class="text-center text-muted"><%= block.created_at.strftime("%b %d, %Y %H:%M") if block.created_at %></td>
<td class="text-center text-muted"><%= block.updated_at.strftime("%b %d, %Y %H:%M") if block.updated_at %></td>

</tr>
