<div class="modal-content">
  <%= form_with(model: [:master_data, block], class: "needs-validation", novalidate: true, data: { action: "turbo:submit-end->modal#formSubmitted" }) do |form| %>
    <div class="modal-header">
      <h5 class="modal-title"><%= block.persisted? ? 'Edit Block' : 'New Block' %></h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <% if block.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(block.errors.count, "error") %> prohibited this block from being saved:</h5>
          <ul>
            <% block.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :block_number, class: "form-label" %>
        <%= form.text_field :block_number, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :hectarage, class: "form-label" %>
        <%= form.number_field :hectarage, class: "form-control", step: :any, required: true %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      <%= form.submit "Save Block", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
