<% content_for :title, "Master Data - Blocks | ST Intent Harvest" %>
<div class="modal-content">
  <%= form_with(model: [:master_data, block], class: "needs-validation", novalidate: true, data: { action: "turbo:submit-end->modal#formSubmitted" }) do |form| %>
    <div class="modal-header">
      <h5 class="modal-title"><strong><%= block.persisted? ? 'Edit Block No.' : ' Add New Block No.' %></strong></h5>
      <button type="button" class="btn-close custom-close-btn" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <% if block.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(block.errors.count, "error") %> prohibited this block from being saved:</h5>
          <ul>
            <% block.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :block_number, "Block No.", class: "form-label" %>
        <%= form.text_field :block_number, placeholder:"Enter Block No.", class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :hectarage,  "Hectarage(Ha)", class: "form-label" %>
        <%= form.number_field :hectarage, placeholder:"Enter Hectarage(Ha)", class: "form-control", step: 0.01, required: true %>
      </div>
    </div>
    <div class="modal-footer">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <i class="bi bi-save-fill text-white me-1"></i> Save
      <% end %>
    </div>
  <% end %>
</div>
