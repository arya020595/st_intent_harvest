<div id="flash_messages">
  <%= render "shared/flash" %>
</div>
<div class="container-fluid px-4 py-4 units-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Units Management</h5>
      <%= link_to new_master_data_unit_path, class: "btn btn-light btn-sm", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-plus-circle"></i> Add Unit
      <% end %>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: master_data_units_path, html: { id: 'unit-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="table-warning">
              <tr>
                <th class="text-center">
                  <%= sort_link(@q, :id, 'ID') %>
                </th>
                <th>
                  <%= sort_link(@q, :name, 'Name') %>
                </th>
                <th>
                  <%= sort_link(@q, :unit_type, 'Unit Type') %>
                </th>
                <th>
                  <%= sort_link(@q, :created_at, 'Created At') %>
                </th>
                <th>
                  <%= sort_link(@q, :updated_at, 'Updated At') %>
                </th>
                <th class="text-center">Actions</th>
              </tr>
              <tr>
                <th class="text-center">
                  <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                </th>
                <th>
                  <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                </th>
                <th>
                  <%= f.search_field :unit_type_cont, class: 'form-control form-control-sm', placeholder: 'Search Type..' %>
                </th>
                <th>
                  <div class="input-group input-group-sm">
                    <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[created_at]">
                    <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                      <i class="bi bi-calendar-range"></i>
                    </span>
                  </div>
                  <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                  <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                </th>
                <th>
                  <div class="input-group input-group-sm">
                    <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[updated_at]">
                    <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                      <i class="bi bi-calendar-range"></i>
                    </span>
                  </div>
                  <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                  <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                </th>
                <th class="text-center">
                  <div class="d-flex gap-1 justify-content-center">
                    <%= f.submit 'Search', class: 'btn btn-warning btn-sm' %>
                    <%= link_to 'Reset', master_data_units_path, class: 'btn btn-secondary btn-sm' %>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody id="unit_rows">
              <% if @units.any? %>
                <%= render partial: 'unit_row', collection: @units, as: :unit %>
              <% else %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    No units found. <%= link_to 'Add a new unit', new_master_data_unit_path, class: 'text-decoration-none', data: { turbo_frame: 'modal' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector(current: params[:per_page] || 10) %>
          <span class="text-muted small">
            <%== @pagy.info_tag(item_name: 'Units') %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "modal" %>
