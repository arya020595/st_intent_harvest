<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Unit Details</h1>
      <div class="card">
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9"><%= @unit.name %></dd>
            <dt class="col-sm-3">Unit Type:</dt>
            <dd class="col-sm-9"><%= @unit.unit_type %></dd>
          </dl>
          <div class="mt-3">
            <%= link_to "Edit", edit_master_data_unit_path(@unit), class: "btn btn-warning" %>
            <%= link_to "Back", master_data_units_path, class: "btn btn-secondary" %>
            <%= link_to "Delete", master_data_unit_path(@unit), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
