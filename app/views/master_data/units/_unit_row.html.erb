<tr id="<%= dom_id(unit) %>">
  <td class="text-center"><%= unit.id %></td>
  <td><strong><%= unit.name %></strong></td>
  <td>
    <span class="badge bg-warning text-dark"><%= unit.unit_type %></span>
  </td>
  <td>
    <small class="text-muted"><%= unit.created_at.strftime("%b %d, %Y %H:%M") if unit.created_at %></small>
  </td>
  <td>
    <small class="text-muted"><%= unit.updated_at.strftime("%b %d, %Y %H:%M") if unit.updated_at %></small>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to master_data_unit_path(unit), class: "btn btn-info btn-sm", title: "View Details" do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <%= link_to edit_master_data_unit_path(unit), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= button_to master_data_unit_path(unit), method: :delete, data: { turbo_confirm: "Are you sure you want to delete #{unit.name}?" }, class: "btn btn-danger btn-sm", title: "Delete", form: { data: { turbo_frame: '_top' }, class: 'd-inline' } do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
