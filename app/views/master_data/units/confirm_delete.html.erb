<%= turbo_frame_tag "modal" do %>
  <div class="modal-content text-center" style="width: 400px; padding: 30px; margin-left: auto; margin-right: auto;">
    <span class="btn-close" data-bs-dismiss="modal" style="position: absolute; top: 10px; right: 10px;"></span>

    <i class="bi bi-exclamation-circle text-danger" style="font-size: 6rem; margin: 20px 0;"></i>

    <p id="deleteConfirmMessage">
      Are you sure you want to delete <strong>"<%= @unit.name %>"</strong>?
    </p>

    <%= form_with url: master_data_unit_path(@unit), method: :delete, local: true, id: "deleteInventoryForm" do %>
      <div class="mt-3">
        <button type="button" class="btn btn-danger me-2" data-bs-dismiss="modal">Cancel</button>
        <%= button_tag "Yes! Delete", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
<% end %>
