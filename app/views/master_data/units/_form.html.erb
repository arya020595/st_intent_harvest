<% content_for :title, "Master Data - Units | ST Intent Harvest" %>
<div class="modal-content">
  <%= form_with(model: [:master_data, unit], class: "needs-validation", novalidate: true, data: { action: "turbo:submit-end->modal#formSubmitted" }) do |form| %>
    <div class="modal-header">
      <h5 class="modal-title"><strong><%= unit.persisted? ? 'Edit Unit' : 'Add New Unit' %></strong></h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <% if unit.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h5>
          <ul>
            <% unit.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :name, "Unit Name", class: "form-label" %>
        <%= form.text_field :name, placeholder:"Enter Unit Name", class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :unit_type, "Unit Type", class: "form-label" %>
        <%= form.text_field :unit_type, placeholder:"Enter Unit Type", class: "form-control", required: true %>
      </div>
    </div>
    <div class="modal-footer">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <i class="bi bi-save-fill text-white me-1"></i> Save
      <% end %>
    </div>
  <% end %>
</div>
