<% content_for :title, "Master Data - Categories | ST Intent Harvest" %>
<div id="url-manager"></div>
<div id="categories" class="container-fluid px-4 py-4 categories-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="categories_page">
      <h1 class="mb-0">Master Data - Categories</h1>
      <div class="d-flex justify-content-end">
        <% if record_policy(Category.new, MasterData::CategoryPolicy).new? %>
          <%= link_to new_master_data_category_path, class: "add-button btn btn-primary btn-sm", **modal_link_data do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Category
          <% end %>
        <% else %>
          <%= link_to new_master_data_category_path, class: "add-button btn btn-primary btn-sm" do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Category
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: master_data_categories_path, html: { id: 'category-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'Category ID') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :name, 'Name') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :parent_name, 'Parent Category') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="filter-buttons">
                      <%= button_tag 'Search', class: 'btn filter-btn' %>
                      <%= link_to 'Reset', master_data_categories_path, class: 'btn reset-btn' , style: 'font-weight: normal;' %>
                    </div>
                  </th>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th>
                    <%= f.search_field :parent_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Parent..' %>
                  </th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="category_rows">
                <% if @categories.any? %>
                  <%= render partial: 'category_row', collection: @categories, as: :category %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No categories found.
                      <% if record_policy(Category.new, MasterData::CategoryPolicy).new? %>
                        <%= link_to 'Add a new category', new_master_data_category_path, class: 'text-decoration-none', **modal_link_data %>
                      <% else %>
                        <%= link_to 'Add a new category', new_master_data_category_path, class: 'text-decoration-none' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Categories') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "modal" %>
