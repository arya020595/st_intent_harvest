<div class="container-fluid px-4 py-4 categories-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Categories Management</h5>
      <%= link_to new_master_data_category_path, class: "btn btn-light btn-sm" do %>
        <i class="bi bi-plus-circle"></i> Add Category
      <% end %>
    </div>
    <div class="card-body">
      <%= turbo_pagy_frame do %>
        <%= search_form_for @q, url: master_data_categories_path, html: { id: 'category-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-success">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :name, 'Name') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :category_type, 'Category Type') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :parent_id, 'Parent Category') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th>
                    <%= f.search_field :category_type_cont, class: 'form-control form-control-sm', placeholder: 'Search Type..' %>
                  </th>
                  <th>
                    <%= f.collection_select :parent_id_eq, Category.where.not(parent_id: nil).distinct.select(:parent_id).map(&:parent).compact, :id, :name, { include_blank: 'All Categories' }, class: 'form-control form-control-sm' %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[created_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                    <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[updated_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                    <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-success btn-sm' %>
                      <%= link_to 'Reset', master_data_categories_path, class: 'btn btn-secondary btn-sm', data: { turbo_frame: pagy_frame_id } %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @categories.any? %>
                  <% @categories.each do |category| %>
                    <tr>
                      <td class="text-center"><%= category.id %></td>
                      <td><strong><%= category.name %></strong></td>
                      <td>
                        <span class="badge bg-info"><%= category.category_type %></span>
                      </td>
                      <td>
                        <% if category.parent %>
                          <%= link_to category.parent.name, master_data_category_path(category.parent), class: 'text-decoration-none' %>
                        <% else %>
                          <span class="text-muted">â€”</span>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted"><%= category.created_at.strftime("%b %d, %Y %H:%M") if category.created_at %></small>
                      </td>
                      <td>
                        <small class="text-muted"><%= category.updated_at.strftime("%b %d, %Y %H:%M") if category.updated_at %></small>
                      </td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to master_data_category_path(category), class: "btn btn-info btn-sm", title: "View Details", data: { turbo_frame: "_top" } do %>
                            <i class="bi bi-info-circle"></i>
                          <% end %>
                          <%= link_to edit_master_data_category_path(category), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: "_top" } do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= link_to master_data_category_path(category), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{category.name}?", turbo_frame: "_top" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                      No categories found. <%= link_to 'Add a new category', new_master_data_category_path, class: 'text-decoration-none' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Categories') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
