<tr id="<%= dom_id(category) %>">
  <td class="text-center"><%= category.id %></td>
  <td><strong><%= category.name %></strong></td>
  <td>
    <span class="badge bg-info"><%= category.category_type %></span>
  </td>
  <td>
    <% if category.parent %>
      <%= link_to category.parent.name, master_data_category_path(category.parent), class: 'text-decoration-none' %>
    <% else %>
      <span class="text-muted">â€”</span>
    <% end %>
  </td>
  <td>
    <small class="text-muted"><%= category.created_at.strftime("%b %d, %Y %H:%M") if category.created_at %></small>
  </td>
  <td>
    <small class="text-muted"><%= category.updated_at.strftime("%b %d, %Y %H:%M") if category.updated_at %></small>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to master_data_category_path(category), class: "btn btn-info btn-sm", title: "View Details", data: { turbo_frame: "_top" } do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <%= link_to edit_master_data_category_path(category), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: "_top" } do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to master_data_category_path(category), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{category.name}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
