<tr id="<%= dom_id(category) %>">
  <td class="text-center">
    <div class="action-buttons">
      <% if record_policy(category, MasterData::CategoryPolicy).show? %>
        <%= link_to master_data_category_path(category), class: "action-btn info", title: "View Details", **modal_link_data do %>
          <i class="bi bi-info-circle-fill"></i>
        <% end %>
      <% else %>
        <%= link_to master_data_category_path(category), class: "action-btn info", title: "View Details" do %>
          <i class="bi bi-info-circle-fill"></i>
        <% end %>
      <% end %>
      <% if record_policy(category, MasterData::CategoryPolicy).edit? %>
        <%= link_to edit_master_data_category_path(category), class: "action-btn warning", title: "Edit", **modal_link_data do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      <% else %>
        <%= link_to edit_master_data_category_path(category), class: "action-btn warning", title: "Edit" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      <% end %>
      <% if record_policy(category, MasterData::CategoryPolicy).confirm_delete? %>
        <%= link_to confirm_delete_master_data_category_path(category), class: "action-btn danger", title: "Delete", **modal_link_data(size: "modal-md") do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      <% else %>
        <%= link_to confirm_delete_master_data_category_path(category), class: "action-btn danger", title: "Delete" do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      <% end %>
    </div>
  </td>
  <td class="text-center"><%= category.id %></td>
  <td><%= category.name %></td>
  <td class="text-center"><%= category.parent&.name || '-' %></td>
  <td class="text-center"><%= category.created_at.strftime("%b %d, %Y %H:%M") if category.created_at %></td>
  <td class="text-center"><%= category.updated_at.strftime("%b %d, %Y %H:%M") if category.updated_at %></td>
</tr>
