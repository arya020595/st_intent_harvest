<%= turbo_frame_tag "modal" do %>
  <div class="modal-content">

    <div class="modal-header d-flex justify-content-between align-items-center" style="padding: 20px;">
      <h5 class="mb-0"><strong>View Category Details</strong></h5>
      <button type="button" class="btn-close custom-close-btn" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
      <dl class="row">
        <dt class="col-sm-3">Category Name:</dt>
        <dd class="col-sm-9"><%= @category.name%></dd>

        <dt class="col-sm-3">Category Type:</dt>
        <dd class="col-sm-9"><%= @category.category_type %></dd>

        <dt class="col-sm-3">Created At:</dt>
        <dd class="col-sm-9"><%= @category.created_at.strftime("%b %d, %Y %H:%M") %></dd>

        <dt class="col-sm-3">Updated At:</dt>
        <dd class="col-sm-9"><%= @category.updated_at.strftime("%b %d, %Y %H:%M") %></dd>

      </dl>
    </div>

  </div>
<% end %>
