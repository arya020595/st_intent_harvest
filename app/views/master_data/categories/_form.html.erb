<%= form_with(model: [:master_data, category], local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h4>
      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :category_type, class: "form-label" %>
    <%= form.text_field :category_type, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :parent_id, "Parent Category", class: "form-label" %>
    <%= form.collection_select :parent_id, Category.all, :id, :name, { include_blank: "None (Top Level)" }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
