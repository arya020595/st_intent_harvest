<%= turbo_frame_tag "modal" do %>
  <div class="modal-content">

    <div class="modal-header d-flex justify-content-between align-items-center" style="padding: 20px;">
      <h5 class="mb-0"><strong>View Work Order Rate Details</strong></h5>
      <button type="button" class="btn-close custom-close-btn" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
      <dl class="row">
        <dt class="col-sm-3">Work Order Name:</dt>
        <dd class="col-sm-9"><%= @work_order_rate.work_order_name%></dd>

        <dt class="col-sm-3">Rate:</dt>
        <dd class="col-sm-9"><%= number_to_currency(@work_order_rate.rate, unit: "RM ", precision: 2) %></dd>

        <dt class="col-sm-3">Unit:</dt>
        <dd class="col-sm-9"><%= @work_order_rate.unit&.name %></dd>

        <dt class="col-sm-3">Created At:</dt>
        <dd class="col-sm-9"><%= @work_order_rate.created_at.strftime("%b %d, %Y %H:%M") %></dd>

        <dt class="col-sm-3">Updated At:</dt>
        <dd class="col-sm-9"><%= @work_order_rate.updated_at.strftime("%b %d, %Y %H:%M") %></dd>

      </dl>
    </div>

  </div>
<% end %>
