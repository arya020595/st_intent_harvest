<div class="container-fluid px-4 py-4 work-order-rates-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Work Order Rates Management</h5>
      <%= link_to new_master_data_work_order_rate_path, class: "btn btn-light btn-sm" do %>
        <i class="bi bi-plus-circle"></i> Add Work Order Rate
      <% end %>
    </div>
    <div class="card-body">
        <%= search_form_for @q, url: master_data_work_order_rates_path, html: { id: 'work_order_rate-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-primary">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :work_order_name, 'Work Order Name') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :rate, 'Rate') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :unit_id, 'Unit') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :work_order_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th class="text-center">
                    <%= f.number_field :rate_eq, class: 'form-control form-control-sm', placeholder: 'Rate', step: 0.01 %>
                  </th>
                  <th>
                    <%= f.collection_select :unit_id_eq, Unit.all, :id, :name, { include_blank: 'All Units' }, class: 'form-control form-control-sm' %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[created_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                    <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[updated_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                    <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-primary btn-sm' %>
                      <%= link_to 'Reset', master_data_work_order_rates_path, class: 'btn btn-secondary btn-sm' %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @work_order_rates.any? %>
                  <%= render partial: 'work_order_rate_row', collection: @work_order_rates, as: :work_order_rate %>
                <% else %>
                  <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                      No work order rates found. <%= link_to 'Add a new work order rate', new_master_data_work_order_rate_path, class: 'text-decoration-none' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Work Order Rates') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
    </div>
  </div>
</div>
