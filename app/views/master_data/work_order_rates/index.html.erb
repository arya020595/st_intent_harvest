<% content_for :title, "Master Data - Work Order Rates | ST Intent Harvest" %>
<div id="url-manager"></div>
<div id="work_order_rates" class="container-fluid px-4 py-4 work-order-rates-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="work_order_rates_page">
      <h1 class="mb-0">Master Data - Work Order Rates</h1>
      <div class="d-flex justify-content-end">
        <%= link_to new_master_data_work_order_rate_path, class: "add-button btn btn-primary btn-sm", **modal_link_data do %>
          <i class="bi bi-plus-circle-fill text-white me-1"></i>Add Work Order Rate
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: master_data_work_order_rates_path, html: { id: 'work_order_rate-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :work_order_name, 'Work Order Name') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :rate, 'Rate(RM)') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :unit_id, 'Unit') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="filter-buttons">
                      <%= button_tag 'Search', type: "submit", class: 'btn filter-btn' %>
                      <%= link_to 'Reset', master_data_work_order_rates_path, class: 'btn reset-btn', style: 'font-weight: normal;' %>
                    </div>
                  </th>
                  <th>
                    <%= f.search_field :work_order_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                  </th>
                  <th class="text-center">
                    <%= f.number_field :rate_eq, class: 'form-control form-control-sm', placeholder: 'Rate', step: 0.01 %>
                  </th>
                  <th>
                    <%= f.collection_select :unit_id_eq, Unit.all, :id, :name, { include_blank: 'All Units' }, class: 'form-control form-control-sm' %>
                  </th>
                  <th>
                  </th>
                  <th>
                  </th>
                </tr>
              </thead>
              <tbody id="work_order_rate_rows">
                <% if @work_order_rates.any? %>
                  <%= render partial: 'work_order_rate_row', collection: @work_order_rates, as: :work_order_rate %>
                <% else %>
                  <tr>
                    <td colspan="7" class="text-center text-muted py-4">
                      No work order rates found. <%= link_to 'Add a new work order rate', new_master_data_work_order_rate_path, class: 'text-decoration-none', **modal_link_data %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Work Order Rates') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "modal" %>
