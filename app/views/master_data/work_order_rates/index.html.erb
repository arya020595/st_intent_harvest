<div class="container-fluid px-4 py-4 work-order-rates-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Work Order Rates Management</h5>
      <%= link_to new_master_data_work_order_rate_path, class: "btn btn-light btn-sm" do %>
        <i class="bi bi-plus-circle"></i> Add Work Order Rate
      <% end %>
    </div>
    <div class="card-body">
      <%= search_form_for @q, url: master_data_work_order_rates_path, html: { id: 'work_order_rate-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover table-sm mb-0">
            <thead class="table-primary">
              <tr>
                <th class="text-center">
                  <%= sort_link(@q, :id, 'ID') %>
                </th>
                <th>
                  <%= sort_link(@q, :work_order_name, 'Work Order Name') %>
                </th>
                <th class="text-center">
                  <%= sort_link(@q, :rate, 'Rate') %>
                </th>
                <th>
                  <%= sort_link(@q, :unit_id, 'Unit') %>
                </th>
                <th>
                  <%= sort_link(@q, :created_at, 'Created At') %>
                </th>
                <th>
                  <%= sort_link(@q, :updated_at, 'Updated At') %>
                </th>
                <th class="text-center">Actions</th>
              </tr>
              <tr>
                <th class="text-center">
                  <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                </th>
                <th>
                  <%= f.search_field :work_order_name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..' %>
                </th>
                <th class="text-center">
                  <%= f.number_field :rate_eq, class: 'form-control form-control-sm', placeholder: 'Rate', step: 0.01 %>
                </th>
                <th>
                  <%= f.collection_select :unit_id_eq, Unit.all, :id, :name, { include_blank: 'All Units' }, class: 'form-control form-control-sm' %>
                </th>
                <th>
                  <%= f.search_field :created_at_gteq, class: 'form-control form-control-sm', placeholder: 'From..', type: 'datetime-local' %>
                </th>
                <th>
                  <%= f.search_field :updated_at_lteq, class: 'form-control form-control-sm', placeholder: 'To..', type: 'datetime-local' %>
                </th>
                <th class="text-center">
                  <div class="d-flex gap-1 justify-content-center">
                    <%= f.submit 'Search', class: 'btn btn-primary btn-sm' %>
                    <%= link_to 'Reset', master_data_work_order_rates_path, class: 'btn btn-secondary btn-sm' %>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              <% if @work_order_rates.any? %>
                <% @work_order_rates.each do |work_order_rate| %>
                  <tr>
                    <td class="text-center"><%= work_order_rate.id %></td>
                    <td><strong><%= work_order_rate.work_order_name %></strong></td>
                    <td class="text-center">
                      <span class="badge bg-info"><%= number_with_precision(work_order_rate.rate, precision: 2) %></span>
                    </td>
                    <td>
                      <% if work_order_rate.unit %>
                        <%= link_to work_order_rate.unit.name, master_data_unit_path(work_order_rate.unit), class: 'text-decoration-none' %>
                      <% else %>
                        <span class="text-muted">â€”</span>
                      <% end %>
                    </td>
                    <td>
                      <small class="text-muted"><%= work_order_rate.created_at.strftime("%b %d, %Y %H:%M") if work_order_rate.created_at %></small>
                    </td>
                    <td>
                      <small class="text-muted"><%= work_order_rate.updated_at.strftime("%b %d, %Y %H:%M") if work_order_rate.updated_at %></small>
                    </td>
                    <td class="text-center">
                      <div class="btn-group btn-group-sm" role="group">
                        <%= link_to master_data_work_order_rate_path(work_order_rate), class: "btn btn-info btn-sm", title: "View Details" do %>
                          <i class="bi bi-info-circle"></i>
                        <% end %>
                        <%= link_to edit_master_data_work_order_rate_path(work_order_rate), class: "btn btn-warning btn-sm", title: "Edit" do %>
                          <i class="bi bi-pencil"></i>
                        <% end %>
                        <%= link_to master_data_work_order_rate_path(work_order_rate), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{work_order_rate.work_order_name}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">
                    No work order rates found. <%= link_to 'Add a new rate', new_master_data_work_order_rate_path, class: 'text-decoration-none' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="d-flex align-items-center gap-2">
          <span class="text-muted small">Show</span>
          <%= per_page_selector(current: params[:per_page] || 10) %>
          <span class="text-muted small">
            <%= pagination_info(@pagy) %>
          </span>
        </div>
        <div>
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
