<div class="modal-content" data-controller="work-order-rate-form">
  <%= form_with(model: [:master_data, work_order_rate], class: "needs-validation", novalidate: true, data: { action: "turbo:submit-end->modal#formSubmitted" }) do |form| %>
    <div class="modal-header">
      <h5 class="modal-title"><strong><%= work_order_rate.persisted? ? 'Edit Work Order Rate' : 'Add New Work Order Rate' %></strong></h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <% if work_order_rate.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(work_order_rate.errors.count, "error") %> prohibited this work order rate from being saved:</h5>
          <ul>
            <% work_order_rate.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :work_order_name, "Work Order Name", class: "form-label" %>
        <%= form.text_field :work_order_name, placeholder:"Enter Work Order Name", class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :work_order_rate_type, "Work Order Rate Type", class: "form-label" %>
        <%= form.select :work_order_rate_type,
                        WorkOrderRate.work_order_rate_types.keys.map { |key| [key.titleize, key] },
                        {include_blank: "Select Rate Type"},
                        class: "form-select",
                        required: true,
                        data: {
                          work_order_rate_form_target: "rateType",
                          action: "change->work-order-rate-form#toggleUnitAndRate"
                        } %>
      </div>
      <div class="mb-3" data-work-order-rate-form-target="unitField">
        <%= form.label :unit_id, "Unit of Measurement", class: "form-label" %>
        <%= form.collection_select :unit_id, Unit.all, :id, :name, { include_blank: "Select Unit" }, class: "form-select" %>
      </div>
      <div class="mb-3" data-work-order-rate-form-target="rateField">
        <%= form.label :rate, "Rate (RM)", class: "form-label" %>
        <%= form.number_field :rate, placeholder:"Enter Rate(RM)", step: 0.01, class: "form-control", required: true %>
      </div>
    </div>
    <div class="modal-footer">
      <%= button_tag type: :submit, class: "btn btn-success" do %>
        <i class="bi bi-save-fill text-white me-1"></i> Save
      <% end %>
    </div>
  <% end %>
</div>
