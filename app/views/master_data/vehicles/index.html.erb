<div id="url-manager"></div>
<div id="vehicles" class="container-fluid px-4 py-4 vehicles-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="vehicle_page">
      <h1 class="mb-0">Master Data - Vehicles</h1>
      <div class="d-flex justify-content-end">
        <%= link_to new_master_data_vehicle_path, class: "add-button btn btn-primary btn-sm", **modal_link_data do %>
          <i class="bi bi-plus-circle-fill text-white me-1"></i>Add Vehicle
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: master_data_vehicles_path, html: { id: 'vehicle-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :vehicle_number, 'Vehicle No.') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :vehicle_model, 'Vehicle Model') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= button_tag 'Search', type: "submit", class: 'btn filter-btn' %>
                      <%= link_to 'Reset', master_data_vehicles_path, class: 'btn reset-btn' , style: 'font-weight: normal;' %>
                    </div>
                  </th>
                  <th>
                    <%= f.search_field :vehicle_number_cont, class: 'form-control form-control-sm', placeholder: 'Search Vehicle Number..' %>
                  </th>
                  <th>
                    <%= f.search_field :vehicle_model_cont, class: 'form-control form-control-sm', placeholder: 'Search Model..' %>
                  </th>
                  <th>
                  </th>
                  <th>
                  </th>
                </tr>
              </thead>
              <tbody id="vehicle_rows">
                <% if @vehicles.any? %>
                  <%= render partial: 'vehicle_row', collection: @vehicles, as: :vehicle %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No vehicles found. <%= link_to 'Add a new vehicle', new_master_data_vehicle_path, class: 'text-decoration-none', **modal_link_data %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Vehicles') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "modal" %>
