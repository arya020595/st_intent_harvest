<div class="container-fluid px-4 py-4 vehicles-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Vehicles Management</h5>
      <%= link_to new_master_data_vehicle_path, class: "btn btn-light btn-sm", data: { turbo_frame: "_top" } do %>
        <i class="bi bi-plus-circle"></i> Add Vehicle
      <% end %>
    </div>
    <div class="card-body">
      <%= turbo_pagy_frame do %>
        <%= search_form_for @q, url: master_data_vehicles_path, html: { id: 'vehicle-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="table-danger">
                <tr>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :vehicle_number, 'Vehicle Number') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :vehicle_model, 'Vehicle Model') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th>
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                  <th class="text-center">Actions</th>
                </tr>
                <tr>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1 %>
                  </th>
                  <th>
                    <%= f.search_field :vehicle_number_cont, class: 'form-control form-control-sm', placeholder: 'Search Vehicle Number..' %>
                  </th>
                  <th>
                    <%= f.search_field :vehicle_model_cont, class: 'form-control form-control-sm', placeholder: 'Search Model..' %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[created_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :created_at_gteq, value: params.dig(:q, :created_at_gteq) %>
                    <%= f.hidden_field :created_at_lteq, value: params.dig(:q, :created_at_lteq) %>
                  </th>
                  <th>
                    <div class="input-group input-group-sm">
                      <input type="text" 
                           class="form-control form-control-sm cursor-pointer" 
                           placeholder="Select Date Range"
                           data-controller="flatpickr"
                           data-flatpickr-mode-value="range"
                           data-flatpickr-date-format-value="d-m-Y H:i"
                           data-flatpickr-enable-time-value="true"
                           data-flatpickr-field-name-value="q[updated_at]">
                      <span class="input-group-text cursor-pointer" data-action="click->flatpickr#open">
                        <i class="bi bi-calendar-range"></i>
                      </span>
                    </div>
                    <%= f.hidden_field :updated_at_gteq, value: params.dig(:q, :updated_at_gteq) %>
                    <%= f.hidden_field :updated_at_lteq, value: params.dig(:q, :updated_at_lteq) %>
                  </th>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= f.submit 'Search', class: 'btn btn-danger btn-sm' %>
                      <%= link_to 'Reset', master_data_vehicles_path, class: 'btn btn-secondary btn-sm', data: { turbo_frame: pagy_frame_id } %>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if @vehicles.any? %>
                  <% @vehicles.each do |vehicle| %>
                    <tr>
                      <td class="text-center"><%= vehicle.id %></td>
                      <td><strong><%= vehicle.vehicle_number %></strong></td>
                      <td><%= vehicle.vehicle_model %></td>
                      <td>
                        <small class="text-muted"><%= vehicle.created_at.strftime("%b %d, %Y %H:%M") if vehicle.created_at %></small>
                      </td>
                      <td>
                        <small class="text-muted"><%= vehicle.updated_at.strftime("%b %d, %Y %H:%M") if vehicle.updated_at %></small>
                      </td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to master_data_vehicle_path(vehicle), class: "btn btn-info btn-sm", title: "View Details", data: { turbo_frame: "_top" } do %>
                            <i class="bi bi-info-circle"></i>
                          <% end %>
                          <%= link_to edit_master_data_vehicle_path(vehicle), class: "btn btn-warning btn-sm", title: "Edit", data: { turbo_frame: "_top" } do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= button_to master_data_vehicle_path(vehicle), form: { data: { turbo_confirm: "Are you sure you want to delete #{vehicle.vehicle_number}?", turbo_frame: "_top" } }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      No vehicles found. <%= link_to 'Add a new vehicle', new_master_data_vehicle_path, class: 'text-decoration-none', data: { turbo_frame: "_top" } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="d-flex align-items-center gap-2">
            <span class="text-muted small">Show</span>
            <%= per_page_selector(current: params[:per_page] || 10) %>
            <span class="text-muted small">
              <%== @pagy.info_tag(item_name: 'Vehicles') %>
            </span>
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
