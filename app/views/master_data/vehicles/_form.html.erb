<div class="modal-content">
  <%= form_with(model: [:master_data, vehicle], class: "needs-validation", novalidate: true, data: { action: "turbo:submit-end->modal#formSubmitted" }) do |form| %>
    <div class="modal-header">
      <h5 class="modal-title"><%= vehicle.persisted? ? 'Edit Vehicle' : 'New Vehicle' %></h5>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <% if vehicle.errors.any? %>
        <div class="alert alert-danger">
          <h5><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h5>
          <ul>
            <% vehicle.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :vehicle_number, class: "form-label" %>
        <%= form.text_field :vehicle_number, class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= form.label :vehicle_model, class: "form-label" %>
        <%= form.text_field :vehicle_model, class: "form-control", required: true %>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      <%= form.submit "Save Vehicle", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
