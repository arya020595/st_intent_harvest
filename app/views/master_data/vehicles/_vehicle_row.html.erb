<tr id="<%= dom_id(vehicle) %>">
  <td class="text-center">
    <div class="action-buttons">
      <% if record_policy(vehicle, MasterData::VehiclePolicy).show? %>
        <%= link_to master_data_vehicle_path(vehicle), class: "action-btn info", title: "View Details", **modal_link_data do %>
          <i class="bi bi-info-circle-fill"></i>
        <% end %>
      <% else %>
        <%= link_to master_data_vehicle_path(vehicle), class: "action-btn info", title: "View Details" do %>
          <i class="bi bi-info-circle-fill"></i>
        <% end %>
      <% end %>
      <% if record_policy(vehicle, MasterData::VehiclePolicy).edit? %>
        <%= link_to edit_master_data_vehicle_path(vehicle), class: "action-btn warning", title: "Edit", **modal_link_data do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      <% else %>
        <%= link_to edit_master_data_vehicle_path(vehicle), class: "action-btn warning", title: "Edit" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
      <% end %>
      <% if record_policy(vehicle, MasterData::VehiclePolicy).confirm_delete? %>
        <%= link_to confirm_delete_master_data_vehicle_path(vehicle), class: "action-btn danger", title: "Delete", **modal_link_data(size: "modal-md") do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      <% else %>
        <%= link_to confirm_delete_master_data_vehicle_path(vehicle), class: "action-btn danger", title: "Delete" do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      <% end %>
    </div>
  </td>
  <td><%= vehicle.vehicle_number %></td>
  <td><%= vehicle.vehicle_model %></td>
  <td class="text-center"><%= vehicle.created_at.strftime("%b %d, %Y %H:%M") if vehicle.created_at %></td>
  <td class="text-center"><%= vehicle.updated_at.strftime("%b %d, %Y %H:%M") if vehicle.updated_at %></td>
</tr>
