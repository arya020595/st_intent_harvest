<tr id="<%= dom_id(vehicle) %>">
  <td class="text-center">
    <div class="action-buttons">
      <%= link_to master_data_vehicle_path(vehicle),
            class: "action-btn info",
            title: "View Details",
            data: { turbo_frame: "modal" } do %>
        <i class="bi bi-info-circle-fill"></i>
      <% end %>
      <%= link_to edit_master_data_vehicle_path(vehicle), class: "action-btn warning", title: "Edit", data: { turbo_frame: 'modal' } do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
      <%= link_to confirm_delete_master_data_vehicle_path(vehicle),
                  class: "action-btn danger",
                  title: "Delete",
                  **modal_link_data(size: "modal-md") do %>
        <i class="bi bi-trash-fill"></i>
      <% end %>
    </div>
  </td>
  <td><%= vehicle.vehicle_number %></td>
  <td><%= vehicle.vehicle_model %></td>
  <td class="text-center"><%= vehicle.created_at.strftime("%b %d, %Y %H:%M") if vehicle.created_at %></td>
  <td class="text-center"><%= vehicle.updated_at.strftime("%b %d, %Y %H:%M") if vehicle.updated_at %></td>
</tr>
