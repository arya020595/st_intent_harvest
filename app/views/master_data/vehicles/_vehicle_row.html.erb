<tr id="<%= dom_id(vehicle) %>">
  <td class="text-center"><%= vehicle.id %></td>
  <td><strong><%= vehicle.vehicle_number %></strong></td>
  <td><%= vehicle.vehicle_model %></td>
  <td>
    <small class="text-muted"><%= vehicle.created_at.strftime("%b %d, %Y %H:%M") if vehicle.created_at %></small>
  </td>
  <td>
    <small class="text-muted"><%= vehicle.updated_at.strftime("%b %d, %Y %H:%M") if vehicle.updated_at %></small>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-sm" role="group">
      <%= link_to master_data_vehicle_path(vehicle), class: "btn btn-info btn-sm", title: "View Details" do %>
        <i class="bi bi-info-circle"></i>
      <% end %>
      <%= link_to edit_master_data_vehicle_path(vehicle), class: "btn btn-warning btn-sm", title: "Edit" do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to master_data_vehicle_path(vehicle), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{vehicle.vehicle_number}?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </td>
</tr>
