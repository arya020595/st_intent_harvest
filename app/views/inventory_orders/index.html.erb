<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2 class="mb-1">Inventory Orders - <%= @inventory.name %></h2>
          <p class="text-muted mb-0">Manage purchase orders for <%= @inventory.name %></p>
        </div>
        <div>
          <%= link_to inventories_path, class: "btn btn-outline-secondary me-2" do %>
            <i class="bi bi-arrow-left"></i> Back to Inventories
          <% end %>
          <%= link_to new_inventory_inventory_order_path(@inventory),
              data: { turbo_frame: "modal" },
              class: "btn btn-primary" do %>
            <i class="bi bi-plus-circle"></i> New Purchase Order
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= turbo_frame_tag "modal" %>
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <!-- Search Form -->
          <%= search_form_for @q, url: inventory_inventory_orders_path(@inventory), method: :get, class: "mb-4" do |f| %>
            <div class="row g-3">
              <div class="col-md-3">
                <%= f.label :supplier_cont, "Supplier", class: "form-label" %>
                <%= f.search_field :supplier_cont, class: "form-control", placeholder: "Search supplier..." %>
              </div>
              <div class="col-md-3">
                <%= f.label :purchase_date_gteq, "From Date", class: "form-label" %>
                <%= f.date_field :purchase_date_gteq, class: "form-control" %>
              </div>
              <div class="col-md-3">
                <%= f.label :purchase_date_lteq, "To Date", class: "form-label" %>
                <%= f.date_field :purchase_date_lteq, class: "form-control" %>
              </div>
              <div class="col-md-3 d-flex align-items-end gap-2">
                <%= f.submit "Search", class: "btn btn-primary" %>
                <%= link_to "Reset", inventory_inventory_orders_path(@inventory), class: "btn btn-outline-secondary" %>
              </div>
            </div>
          <% end %>
          <!-- Orders Table -->
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th><%= sort_link(@q, :purchase_date, "Purchase Date") %></th>
                  <th><%= sort_link(@q, :supplier, "Supplier") %></th>
                  <th class="text-end"><%= sort_link(@q, :quantity, "Quantity") %></th>
                  <th class="text-end"><%= sort_link(@q, :unit_price, "Unit Price") %></th>
                  <th class="text-end"><%= sort_link(@q, :total_price, "Total Price") %></th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if @inventory_orders.any? %>
                  <% @inventory_orders.each do |order| %>
                    <tr>
                      <td><%= order.purchase_date.strftime("%d %b %Y") %></td>
                      <td><%= order.supplier %></td>
                      <td class="text-end"><%= number_with_delimiter(order.quantity) %> <%= @inventory.unit&.name %></td>
                      <td class="text-end">RM <%= number_with_precision(order.unit_price, precision: 2) %></td>
                      <td class="text-end"><strong>RM <%= number_with_precision(order.total_price, precision: 2) %></strong></td>
                      <td class="text-center">
                        <div class="btn-group btn-group-sm">
                          <%= link_to inventory_inventory_order_path(@inventory, order),
                              data: { turbo_frame: "modal" },
                              class: "btn btn-outline-info",
                              title: "View" do %>
                            <i class="bi bi-eye"></i>
                          <% end %>
                          <%= link_to edit_inventory_inventory_order_path(@inventory, order),
                              data: { turbo_frame: "modal" },
                              class: "btn btn-outline-warning",
                              title: "Edit" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                          <%= link_to confirm_delete_inventory_inventory_order_path(@inventory, order),
                              data: { turbo_frame: "modal" },
                              class: "btn btn-outline-danger",
                              title: "Delete" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                      <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                      No purchase orders found for this inventory.
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <% if @inventory_orders.any? %>
                <tfoot class="table-light">
                  <tr>
                    <th colspan="2" class="text-end">Total:</th>
                    <th class="text-end"><%= number_with_delimiter(@inventory_orders.sum(:quantity)) %> <%= @inventory.unit&.name %></th>
                    <th></th>
                    <th class="text-end"><strong>RM <%= number_with_precision(@inventory_orders.sum(:total_price), precision: 2) %></strong></th>
                    <th></th>
                  </tr>
                </tfoot>
              <% end %>
            </table>
          </div>
          <!-- Pagination -->
          <% if @pagy.pages > 1 %>
            <div class="mt-3">
              <%== pagy_bootstrap_nav(@pagy) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
