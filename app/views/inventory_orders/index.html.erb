<div id="inventory_orders" class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <div class="inventories_order_page">
        <h1 class="mb-0">Inventory Orders - <%= @inventory.name %></h1>
        <hr/>
        <!-- Back Button -->
        <div class="mb-3">
          <%= link_to inventories_path,
              class: "text-decoration-none text-dark d-inline-flex align-items-center fs-5 fw-bold" do %>
            <i class="bi bi-arrow-left me-2"></i> Back to Inventory List
          <% end %>
        </div>
        <hr/>
        <!-- New Purchase Order Button -->
        <div class="mb-3 d-flex justify-content-end">
          <%= link_to new_inventory_inventory_order_path(@inventory),
              class: "add-button btn btn-primary",
              **modal_link_data do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i> Add Purchase Order
          <% end %>
        </div>
        <div class="row mt-3">
          <div class="col-12">
            <div class="card shadow-sm">
              <div class="card-body">
                <%= search_form_for @q,
                    url: inventory_inventory_orders_path(@inventory),
                    method: :get,
                    html: { class: "mb-4", data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
                  <!-- Orders Table -->
                  <div class="table-responsive mt-4">
                    <table class="table table-hover align-middle">
                      <thead class="header-row">
                        <tr class="header-row">
                          <th></th>
                          <th class="text-center"><%= sort_link(@q, :purchase_date, "Purchase Date") %></th>
                          <th class="text-center"><%= sort_link(@q, :supplier, "Supplier") %></th>
                          <th class="text-center"><%= sort_link(@q, :quantity, "Quantity") %></th>
                          <th class="text-center"><%= sort_link(@q, :unit_price, "Unit Price") %></th>
                          <th class="text-center"><%= sort_link(@q, :total_price, "Total Price") %></th>
                        </tr>
                        <!-- Filter row -->
                        <tr>
                          <th>
                            <div class="filter-buttons">
                              <%= link_to "Reset",
                                  inventory_inventory_orders_path(@inventory),
                                  class: "btn reset-btn",
                                  style: "width: 120px;" %>
                            </div>
                          </th>
                          <!-- Purchase Date Range -->
                          <th class="text-center">
                            <div class="input-group input-group-sm"
                                data-controller="flatpickr"
                                data-flatpickr-mode-value="range"
                                data-flatpickr-date-format-value="d-m-Y"
                                data-flatpickr-field-name-value="q[purchase_date]"
                                data-action="flatpickr:change->search-form#autoSubmit">
                              <input type="text"
                                    class="form-control form-control-sm cursor-pointer"
                                    placeholder="Purchase Date Range"
                                    data-flatpickr-target="input">
                              <span class="input-group-text cursor-pointer"
                                    data-action="click->flatpickr#open">
                                <i class="bi bi-calendar-range"></i>
                              </span>
                            </div>
                            <!-- Hidden fields for Ransack -->
                            <%= f.hidden_field :purchase_date_gteq,
                                  value: params.dig(:q, :purchase_date_gteq) %>
                            <%= f.hidden_field :purchase_date_lteq,
                                  value: params.dig(:q, :purchase_date_lteq) %>
                          </th>
                          <!-- Supplier Search -->
                          <th>
                            <%= f.search_field :supplier_cont,
                                  class: 'form-control form-control-sm',
                                  placeholder: 'Search Supplier...',
                                  data: { action: "input->search-form#autoSubmit" } %>
                          </th>
                          <th></th>
                          <th></th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody id="inventory_orders_rows">
                        <% if @inventory_orders.any? %>
                          <% @inventory_orders.each do |order| %>
                            <%= render partial: "inventory_orders/row", locals: { order: order } %>
                          <% end %>
                        <% else %>
                          <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                              <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                              No purchase orders found for this inventory.
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
                <div class="d-flex justify-content-between align-items-center mt-3">
                  <div class="d-flex align-items-center gap-2">
                    <span class="text-muted small">Show</span>
                    <%= per_page_selector(current: params[:per_page] || 10) %>
                    <span class="text-muted small">
                      <%== @pagy.info_tag(item_name: 'Inventory Orders') %>
                    </span>
                  </div>
                  <div>
                    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "modal" %>
